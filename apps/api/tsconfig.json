{
  "extends": "../../tsconfig.json",
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "globals.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["./src/lib/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@routes/*": ["./src/routes/*"],
      "@services/*": ["./src/services/*"],
    },
    "module": "nodenext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
  }
}
