{
  "extends": "../../tsconfig.json",
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "prisma/**/*.ts",
    "globals.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
  }
}
