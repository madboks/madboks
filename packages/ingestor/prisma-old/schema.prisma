generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@internal/prisma-old/client"
}

datasource db {
  provider = "mysql"
  url      = env("OLD_DATABASE_URL")
}

model country {
  id            Int    @id @default(autoincrement()) @db.UnsignedInt
  label         String @db.VarChar(128)
  image         String @default("placeholder.png") @db.VarChar(128)
  active        Int    @default(1) @db.TinyInt
  display_order Int    @default(1)
}

model errors {
  id          Int      @id @default(autoincrement())
  endpoint    String   @db.VarChar(20)
  request_url String   @db.VarChar(1000)
  error_json  String   @db.VarChar(10000)
  time        DateTime @default(now()) @db.DateTime(0)
}

model gwp {
  id         Int    @id @default(autoincrement())
  label      String @db.VarChar(128)
  gwp_median Float  @db.Float
  gwp_mean   Float  @db.Float
}

model items {
  id          Int       @id @default(autoincrement())
  product_id  Int
  country_id  Int
  shop_id     Int
  mass        Float     @db.Float
  items       Int       @default(1)
  total_mass  Float
  barcode     String    @db.VarChar(128)
  best_before DateTime? @db.DateTime(0)
  scan_time   DateTime  @default(now()) @db.DateTime(0)
  emissions   Float     @default(0)
  active      Boolean   @default(true)
}

model products {
  id             Int     @id @default(autoincrement()) @db.UnsignedInt
  label          String  @db.VarChar(64)
  image          String  @default("logo.png") @db.VarChar(64)
  gwp_id         Int     @default(1)
  active         Boolean @default(true)
  display_order  Int     @default(1)
  suggested_mass Float   @default(0)
}

model shop {
  id     Int     @id @default(autoincrement()) @db.UnsignedInt
  label  String  @db.VarChar(128)
  image  String  @default("placeholder.png") @db.VarChar(128)
  active Boolean @default(true)
}
